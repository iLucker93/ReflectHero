        = f.input_field :card_drop, class: 'form-control', placeholder: 'card_drop'
      div.form-group
        = f.input_field :card_chance, class: 'form-control', placeholder: 'card_chance'
      div.form-group
        = f.submit "Создать", class: 'btn btn-block btn-lg btn-success'